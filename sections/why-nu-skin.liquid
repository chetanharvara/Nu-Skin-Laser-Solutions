{% comment %} sections/why-nu-skin.liquid {% endcomment %}
<div class="why-section section-{{ section.id }}-padding">
  <div class="page-width">
    <div class="why-text">
      <h1>{{ section.settings.heading }}</h1>
      <div class="why-text-content">
        {% for block in section.blocks %}
          {% case block.type %}
            {% when 'feature' %}
              <div class="icon-box">
                <div class="icon-col">
                  {% if block.settings.icon != blank %}
                    <img
                      src="{{ block.settings.icon | image_url: width: 100 }}"
                      alt="{{ block.settings.title | escape }}"
                      class="custom-icon"
                      width="50"
                      height="50"
                      loading="lazy"
                    >
                  {% else %}
                    <div class="icon-placeholder">
                      {{ 'image' | placeholder_svg_tag: 'custom-icon placeholder-svg' }}
                    </div>
                  {% endif %}
                </div>
                <div class="icon-text">
                  <h3>{{ block.settings.title }}</h3>
                  <p>{{ block.settings.description }}</p>
                </div>
              </div>
          {% endcase %}
        {% endfor %}
      </div>
    </div>
  </div>
</div>

<style>
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  }



  .why-section {
    background-color: white;
  }

  .why-text h1 {
    font-size: 56px;
    color: #2f2f2f;
    margin-bottom: 60px;
    text-align: center;
    font-weight: 400;
  }

  .why-text-content {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 30px;
  }

  .icon-box {
    display: flex;
    background: #f8f8f8;
    border-radius: 12px;
    padding: 30px;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .icon-box:hover {
    transform: translateY(-10px);
    box-shadow: 0 20px 40px rgba(0,0,0,0.1);
  }

  .icon-col {
    flex: 0 0 auto;
    margin-right: 25px;
  }

  .custom-icon {
    width: 50px;
    height: 50px;
    object-fit: contain;
  }

  .icon-text {
    flex: 1;
  }

  .icon-box h3 {
    font-size: 22px;
    color: #208fa3;
    margin-bottom: 15px;
    font-weight: 500;
  }

  .icon-box p {
    font-size: 16px;
    color: #2f2f2f;
    line-height: 1.6;
  }

  @media (max-width: 1024px) {
    .why-text-content {
      grid-template-columns: 1fr;
    }

    .why-text h1 {
      font-size: 46px;
    }
  }

  @media (max-width: 768px) {
    .why-text h1 {
      font-size: 36px;
    }

    .icon-box {
      flex-direction: column;
      text-align: center;
    }

    .icon-col {
      margin-right: 0;
      margin-bottom: 20px;
    }
  }
</style>

