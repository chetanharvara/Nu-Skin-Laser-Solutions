{% comment %} sections/testimonials.liquid {% endcomment %}
<div class="testimonials-section section-{{ section.id }}-padding">
  <div class="page-width">
    <div class="testimonials-section-title">
      <div class="testimonials-title">
        <h1>{{ section.settings.heading }}</h1>
      </div>
      <div class="testimonials-divider">
        <div class="divider-blue"></div>
      </div>
    </div>

    <div class="testimonials-slider">
      {% for block in section.blocks %}
        <div class="testimonials-card">
          <div class="testimonials-client-name">
            -
            <h3>{{ block.settings.client_name }}</h3>
          </div>
          <p class="testimonials-text">{{ block.settings.testimonial }}</p>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

<style>
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  }

  .testimonials-section-title {
    display: flex;
    align-items: center;
    margin-bottom: 50px;
  }

  .testimonials-title {
    flex: 0 0 auto;
    padding-right: 30px;
  }

  .testimonials-title h1 {
    font-size: 56px;
    color: #208fa3;
    font-family: poppins, sans-serif;
    font-weight: 400;
    white-space: nowrap;
  }

  .testimonials-divider {
    flex: 1;
  }

  .divider-blue {
    height: 3px;
    background-color: #208fa3;
    width: 100%;
  }

  .testimonials-slider {
    display: flex;
    overflow-x: auto;
    gap: 30px;
    padding: 20px 0;
    scrollbar-width: thin;
    scrollbar-color: #208fa3 transparent;
  }

  .testimonials-slider::-webkit-scrollbar {
    height: 8px;
  }

  .testimonials-slider::-webkit-scrollbar-thumb {
    background: #208fa3;
    border-radius: 4px;
  }

  .testimonials-card {
    flex: 0 0 400px;
    background: #f8f8f8;
    border-radius: 12px;
    padding: 30px;
    box-shadow: 0 5px 15px rgba(0,0,0,0.05);
  }

  .testimonials-client-name {
    display: flex;
    font-size: 16px;
    color: #2f2f2f;
    font-family: poppins, sans-serif;
    font-weight: 600;
    align-items: center;
    margin-bottom: 15px;
  }

  .testimonials-client-name h3 {
    margin-left: 5px;
  }

  .testimonials-text {
    font-size: 16px;
    color: #2f2f2f;
    font-family: poppins, sans-serif;
    font-weight: 300;
    font-style: italic;
    line-height: 1.6;
  }

  @media (max-width: 768px) {
    .testimonials-section-title {
      flex-direction: column;
      align-items: flex-start;
    }

    .testimonials-title h1 {
      font-size: 36px;
      white-space: normal;
    }

    .testimonials-divider {
      width: 100%;
      margin-top: 15px;
    }

    .testimonials-card {
      flex: 0 0 300px;
    }
  }
</style>

{% schema %}
{
  "name": "Testimonials",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "See What They're Saying"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top padding",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom padding",
      "default": 40
    }
  ],
  "blocks": [
    {
      "type": "testimonial",
      "name": "Testimonial",
      "settings": [
        {
          "type": "text",
          "id": "client_name",
          "label": "Client Name",
          "default": "Nefertiti S."
        },
        {
          "type": "textarea",
          "id": "testimonial",
          "label": "Testimonial",
          "default": "Everyone there is so knowledgeable of all the services offered. If you're looking for almost anything beauty related this is your best one stop shop."
        }
      ]
    }
  ],
  "presets": [
