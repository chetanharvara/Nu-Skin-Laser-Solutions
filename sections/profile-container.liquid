{% comment %} sections/profile-container.liquid {% endcomment %}
<div class="profile-container">
  <div class="page-width">
    <div class="profile-inner">
      <div class="profile-image-container">
        <div class="profile-image-wrapper">
          {% if section.settings.image %}
            {{
              section.settings.image
              | image_url: width: 800
              | image_tag: loading: 'lazy', alt: section.settings.image.alt, class: 'profile-image'
            }}
          {% else %}
            <div class="placeholder-image">
              {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
            </div>
          {% endif %}
        </div>
      </div>

      <div class="profile-text-container">
        <h3 class="profile-name">{{ section.settings.name }}</h3>
        <div class="profile-text rte">
          {{ section.settings.bio }}
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .profile-container {
    padding: 80px 0;
    background: {{ section.settings.bg_color }};
  }

  .profile-inner {
    display: flex;
    flex-direction: row;
    align-items: center;
  }

  .profile-image-container {
    width: 50%;
    height: 500px;
    display: flex;
    justify-content: center;
  }

  .profile-image-wrapper {
    width: 445px;
    height: 525px;
    display: flex;
    justify-content: center;
  }

  .profile-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 8px;
  }

  .profile-text-container {
    width: 50%;
    padding: 0 5%;
  }

  .profile-name {
    font-size: 48px;
    font-weight: 400;
    color: #8FC7C9;
    font-family: poppins, sans-serif;
    padding-bottom: 20px;
  }

  .profile-text {
    font-size: 16px;
    font-weight: 300;
    color: #2f2f2f;
    font-family: poppins, sans-serif;
    line-height: 1.6;
  }

  .placeholder-image {
    width: 100%;
    height: 100%;
    background: #f5f5f5;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 8px;
  }

  @media (max-width: 1100px) {
    .profile-inner {
      flex-direction: column;
    }

    .profile-image-container,
    .profile-text-container {
      width: 100%;
      padding: 20px 0;
    }

    .profile-image-wrapper {
      width: 100%;
      max-width: 445px;
      height: auto;
      aspect-ratio: 445/525;
    }

    .profile-name {
      font-size: 36px;
    }
  }

  @media (max-width: 768px) {
    .profile-container {
      padding: 50px 0;
    }

    .profile-name {
      font-size: 28px;
    }
  }
</style>

{% schema %}
{
  "name": "Profile Container",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Profile Image"
    },
    {
      "type": "text",
      "id": "name",
      "label": "Name",
      "default": "Dr. Giuseppina Benincase-Feingold"
    },
    {
      "type": "richtext",
      "id": "bio",
      "label": "Biography",
      "default": "<p>Dr. Giuseppina Beincase-Feingold is a Board Certified Pediatrician, a Fellow of the American Academy of Pediatrics, and has specialized training in pediatrics and pediatric emergency care. She also specializes in Hyperbaric Oxygen Therapy (HBOT) and IV Infusions for medical and general-wellness purposes.</p><p>Dr. Feingold has successfully treated conditions, diagnoses, and diseases such as Autism, Cerebral Palsy, Multiple Sclerosis, Lyme Disease, Chronic Fatigue Syndrome, and Chronic Infectious Disease. After continued success with HBOT and IV Infusions, Dr. Feingold decided to explore their other benefits. She found that these therapies are also excellent anti-aging and wellness solutions, thus leading her to becoming the Owner and Medical Director of Nu-Skin Laser Solutions.</p>"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color",
      "default": "#ffffff"
    }
  ],
  "presets": [
    {
      "name": "Profile Container",
      "category": "Content"
    }
  ]
}
{% endschema %}
