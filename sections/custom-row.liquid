{% comment %} sections/custom-row.liquid {% endcomment %}
<div class="custom-row-section" style="background: {{ section.settings.bg_color }};">
  <div class="page-width">
    <div class="custom-row" id="row-{{ section.id }}">
      {% for block in section.blocks %}
        <div class="custom-column col-{{ block.settings.width }}" {{ block.shopify_attributes }}>
          {% render 'content-block', block: block %}
        </div>
      {% endfor %}
    </div>
  </div>
</div>

<style>
  .custom-row-section {
    padding: {{ section.settings.padding_top }}px 0 {{ section.settings.padding_bottom }}px;
  }

  .custom-row {
    display: flex;
    flex-wrap: wrap;
    margin: 0 -{{ section.settings.gap }}px;
    {% if section.settings.alignment == 'center' %}justify-content: center;{% endif %}
    {% if section.settings.alignment == 'right' %}justify-content: flex-end;{% endif %}
  }

  .custom-column {
    padding: 0 {{ section.settings.gap }}px;
    margin-bottom: {{ section.settings.gap | times: 2 }}px;
    box-sizing: border-box;
    width: 50%;
  }

  .col-12 { width: 100%; }
  .col-9 { width: 75%; }
  .col-8 { width: 66.66%; }
  .col-6 { width: 50%; }
  .col-4 { width: 33.33%; }
  .col-3 { width: 25%; }

  @media (max-width: 768px) {
    .custom-row {
      flex-direction: column;
    }

    .custom-column {
      width: 100% !important;
    }
  }

  .contact-us-form {
    padding: 80px 0;
  }

  .form-container {
    max-width: 800px;
    margin: 0 auto;
    padding: 50px;
    background-color: #f8f8f8;
    border-radius: 10px;
    box-shadow: rgba(0, 0, 0, 0.1) 0px 2px 6px;
  }

  .contact-us-form h3 {
    font-size: 32px;
    color: #208fa3;
    font-family: poppins, sans-serif;
    font-weight: 400;
    margin-bottom: 30px;
  }

  .form-fields {
    display: flex;
    flex-direction: column;
    gap: 20px;
  }

  .email-phone-fields {
    display: flex;
    gap: 20px;
  }

  .filed-full {
    width: 100%;
  }

  .filed-50 {
    width: 48%;
    flex-grow: 1;
  }

  .phone-filed,
  .email-filed,
  .name-filed,
  .message-filed {
    display: flex;
    flex-direction: column;
  }

  .phone-filed label,
  .email-filed label,
  .name-filed label,
  .message-filed label {
    font-size: 16px;
    color: #208fa3;
    font-family: poppins, sans-serif;
    font-weight: 400;
    margin-bottom: 8px;
  }

  .phone-filed input,
  .email-filed input,
  .name-filed input,
  .message-filed textarea {
    width: 100%;
    box-sizing: border-box;
    border: 0px;
    border-bottom: 1px solid #208fa3;
    font-size: 16px;
    background-color: transparent;
    padding: 12px 0;
    font-family: poppins, sans-serif;
  }

  .message-filed {
    margin-bottom: 10px;
  }

  .darkblue-btn {
    background: #208fa3;
    color: white;
    border: none;
    padding: 14px 35px;
    font-size: 16px;
    border-radius: 4px;
    cursor: pointer;
    transition: background 0.3s ease;
    font-family: poppins, sans-serif;
    margin-top: 20px;
  }

  .darkblue-btn:hover {
    background: #1a7587;
  }

  .form-success {
    color: #28a745;
    font-family: poppins, sans-serif;
    margin-bottom: 20px;
  }

  @media (max-width: 768px) {
    .form-container {
      padding: 30px;
    }

    .contact-us-form h3 {
      font-size: 28px;
    }

    .email-phone-fields {
      flex-direction: column;
      gap: 20px;
    }

    .filed-50 {
      width: 100%;
    }
  }

  @media (max-width: 480px) {
    .form-container {
      padding: 20px;
    }

    .contact-us-form h3 {
      font-size: 24px;
    }
  }

  .contact-us-info {
    padding: 80px 0;
  }

  .info-container {
    max-width: 800px;
    margin: 0 auto;
  }

  .contact-us-info h3 {
    font-size: 32px;
    color: #208fa3;
    font-family: poppins, sans-serif;
    font-weight: 400;
    margin-bottom: 30px;
  }

  .contact-info-col {
    background: white;
    padding: 40px;
    border-radius: 10px;
    box-shadow: rgba(0, 0, 0, 0.1) 0px 2px 6px;
  }

  .contact-address,
  .contact-hours,
  .contact-email,
  .contact-phone {
    font-size: 16px;
    color: #2f2f2f;
    font-family: poppins, sans-serif;
    font-weight: 300;
    margin-bottom: 20px;
    display: flex;
    align-items: flex-start;
  }

  .contact-details {
    margin-bottom: 25px;
  }

  .contact-email a,
  .contact-phone a {
    color: #208fa3;
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .contact-email a:hover,
  .contact-phone a:hover {
    color: #1a7587;
    text-decoration: underline;
  }

  .borderblue-btn {
    background: transparent;
    color: #208fa3;
    border: 2px solid #208fa3;
    padding: 12px 30px;
    font-size: 16px;
    border-radius: 4px;
    cursor: pointer;
    transition: all 0.3s ease;
    font-family: poppins, sans-serif;
    display: inline-block;
    text-decoration: none;
  }

  .borderblue-btn:hover {
    background: #208fa3;
    color: white;
  }

  .map-container {
    width: 100%;
    margin-top: 30px;
    border-radius: 8px;
    overflow: hidden;
  }

  @media (max-width: 768px) {
    .contact-us-info h3 {
      font-size: 28px;
    }

    .contact-info-col {
      padding: 30px;
    }
  }

  @media (max-width: 480px) {
    .contact-us-info h3 {
      font-size: 24px;
    }

    .contact-info-col {
      padding: 20px;
    }
  }
</style>

