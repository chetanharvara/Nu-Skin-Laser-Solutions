{% if product.metafields.custom.what_is_it != blank %}
  <div class="extra-content-wrapper">

  <h2 class="section-title">{{ product.metafields.custom.what_is_it_section_title |  metafield_tag}}</h2>

    {% comment %} <h2 class="section-title">What is it?</h2> {% endcomment %}
    <div class="what-is-it-content">
      {{ product.metafields.custom.what_is_it | metafield_tag }}
    </div>
  </div>
{% endif %}

<style>
  .extra-content-wrapper {
    text-align: left;
    padding: 20px;
  }

  .section-title {
    font-size: 24px;
    margin-bottom: 10px;
  }

  .what-is-it-content {
    font-size: 16px;
    color: #666;
  }
</style>

{% schema %}
    {
        "name": "What is it Section",
        "class": "what-is-it-section",
        "tag": "section",
        "presets": [
        {
            "name": "What is it Section",
            "category": "Product"
        }
        ],
        "settings": [
        {
            "type": "text",
            "id": "section_title",
            "label": "Section Title",
            "default": "What is it?"
        }
        ]
    }
    {% endschema %}